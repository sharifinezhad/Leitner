<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_frontup_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="پرسش"
        android:textSize="35dp"
        android:textAlignment="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/txt_front_id"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_frontup_id"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textSize="35dp"
        android:textAlignment="center"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_kurect_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_front_id"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="60dp"
        android:text="صحیح"/>

    <Button
        android:id="@+id/btn_rotate_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_front_id"
        app:layout_constraintLeft_toRightOf="@+id/btn_kurect_id"
        android:layout_marginLeft="10dp"
        android:text="چرخش" />

    <Button
        android:id="@+id/btn_false_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_front_id"
        app:layout_constraintLeft_toRightOf="@+id/btn_rotate_id"
        android:layout_marginLeft="10dp"
        android:text="اشتباه" />

    <Button
        android:id="@+id/btn_backtoleitner_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_rotate_id"
        app:layout_constraintLeft_toLeftOf="@+id/btn_rotate_id"
        android:text="برگشت" />


</androidx.constraintlayout.widget.ConstraintLayout>